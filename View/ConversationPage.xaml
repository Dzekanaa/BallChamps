            </Grid.ColumnDefinitions>
            <Frame BackgroundColor="{StaticResource lightGrayColor}"  BorderColor="{StaticResource lightGrayColor}" Padding="10" CornerRadius="10" Margin="0,10,0,0">
                <Entry Grid.Column="0" Placeholder="Type your message" BackgroundColor="Transparent" PlaceholderColor="Black" />
            </Frame>
            <ImageButton Margin="10,10,0,0"  Grid.Column="1" Source="iconsend.png" BackgroundColor="Transparent" WidthRequest="40" Aspect="AspectFit" VerticalOptions="Center" HorizontalOptions="Center" />
