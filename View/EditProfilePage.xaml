                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="iconorangeuser.png"
                            HeightRequest="25"
                            WidthRequest="25"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            Margin="5"
                            Aspect="Fill"
                           Grid.Column="0"/>

                        <Entry TextColor="Black" PlaceholderColor="{StaticResource Black}" Placeholder="Choose UserName"
                           HorizontalOptions="Start"      
                           VerticalOptions="Center"
                           Grid.Column="1"
                           FontSize="Small"/>
                    </Grid>
